<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudyang.messageupload"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />
    
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.GET_TASKS" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:sharedUserId="android.uid.system"
        android:allowBackup="true"
        android:icon="@drawable/easy_zhuan"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
			android:name="com.mob.tools.MobUIShell"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:theme="@android:style/Theme.Translucent.NoTitleBar"
			android:windowSoftInputMode="stateHidden|adjustResize" />
        
        <activity 
            android:name=".MainLayout">
        </activity>
        
        <activity 
            android:name=".Login">
        </activity>
        
        <activity 
            android:name=".RulesDetail">
        </activity>
        
        <activity 
            android:name=".SmsListActivity"
            >
        </activity>
        
        <activity 
            android:name="com.cloudyang.my.MyCount">
        </activity>
        
        <activity 
            android:name=".WalletActivity">
        </activity>
        
        <activity 
            android:name=".RegisterActivity">
        </activity>
        
        <activity 
            android:name="com.cloudyang.my.HistoryTaskActivity">
        </activity>
        
        <activity 
            android:name="com.cloudyang.my.HistoryTaskDetail">
        </activity>
        
        <activity 
            android:name="com.cloudyang.my.FAQActivity">
        </activity>
        
        <activity 
            android:name="com.cloudyang.my.FeedBackActivity">
        </activity>
        
        <activity 
            android:name="com.cloudyang.my.ChangePasswdActivity">
        </activity>
        
    </application>

</manifest>
